" http://marcgg.com/blog/2016/03/01/vimrc-example #

let g:sierra_Midnight = 1
colorscheme sierra
filetype on
syntax on
set lines=35 columns=150
set colorcolumn=90
set number
set hidden
set history=100
filetype indent on
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
set hlsearch
set showmatch
